<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bikash.flashfetchcustomer.Quotes"
    tools:showIn="@layout/activity_quotes">
    <TextView
        android:id="@+id/product_search"
        android:text="Product Name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/price_search"
        android:text="Price: $50"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <include layout="@layout/content_quotes" />

</LinearLayout>
