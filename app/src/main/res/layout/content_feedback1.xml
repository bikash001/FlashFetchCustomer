<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.buyer.flashfetch.Feedback1"
    android:background="#29303F"
    tools:showIn="@layout/activity_feedback1">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:background="#29303F"
            tools:context="com.example.sharath.flashfetch_task.feedback"
            android:id="@+id/root">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate us!"
                android:gravity="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sad"
                    android:background="@drawable/sad"
                    android:scaleType="fitXY"
                    android:onClick="abc"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/neutral"
                    android:background="@drawable/neutral"
                    android:onClick="abc"
                    android:scaleType="fitXY"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/happy"
                    android:background="@drawable/happy"
                    android:onClick="abc"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/unsatisfied"
                    android:text="Unsatisfied"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#FFF"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/neutral_text"
                    android:text="Neutral"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#FFF"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/satisfied"
                    android:text="Satisfied"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFF"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments:"
                android:id="@+id/commentText"
                android:textSize="24sp"
                android:layout_marginLeft="10dp"
                android:textColor="#FFF"
                android:paddingTop="12dp"
                android:layout_marginTop="-20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commentString"
                android:maxLines="4"
                android:hint="Tell us how we can improve"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:padding="8dp"
                android:background="@drawable/round"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#fff"
                android:id="@+id/htext"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-25dp"
                android:text="Thank You \n\nWould you recommend it to your friends?"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hlayout"
                android:padding="10dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:layout_weight="1"
                    android:onClick="referyes"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_weight="1"
                    android:onClick="referno"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="Now refer to your friends and earn\n upto Rs.500"
                android:layout_marginTop="15dp"
                android:id="@+id/htext1"
                android:layout_marginLeft="10dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Refer"
                android:id="@+id/hrefer"
                android:onClick="referclick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                android:text="SUBMIT"
                android:layout_gravity="center_horizontal"
                android:onClick="submit"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
