<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Store Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/deals_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Store Address"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/deals_store_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:text="12/12, Home Finders Estate, Chennai."
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Store Phone"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/deals_store_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingBottom="12dp"
        android:text="044-64528945"
        android:textColor="@color/ff_green"
        android:textSize="14sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/store_details_get_directions_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/ff_gray"
            android:gravity="center"
            android:padding="8dp"
            android:text="Get Directions"
            android:textAllCaps="true"
            android:textSize="14dp"
            android:visibility="gone"
            android:textColor="@color/icons" />

        <TextView
            android:id="@+id/store_details_ok_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/ff_green"
            android:gravity="center"
            android:padding="8dp"
            android:text="OK"
            android:textAllCaps="true"
            android:textSize="14dp"
            android:textColor="@color/icons" />

    </LinearLayout>

</LinearLayout>
