<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ffffffff"
    android:background="?android:attr/selectableItemBackground"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_accepted"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/image_description"
            android:scaleType="fitCenter"
            android:layout_weight="0.3" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <TextView
            android:id="@+id/product_name_accepted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_view_accepted"
            android:layout_toRightOf="@+id/image_view_accepted"
            android:text="@string/product_name"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <TextView
            android:id="@+id/price_from_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_accepted"
            android:layout_toRightOf="@+id/image_view_accepted"
            android:text="@string/price"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <TextView
            android:id="@+id/price_offered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_from_store"
            android:layout_toRightOf="@+id/image_view_accepted"
            android:text="@string/price_offered"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <LinearLayout
            android:id="@+id/accepted_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/price_offered"
            android:layout_toRightOf="@+id/image_view_accepted"
            android:orientation="horizontal"
            android:weightSum="1"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_call"
                    android:layout_weight="0.5"
                    android:background="@color/ff_green"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/call" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Call"
                        android:id="@+id/call_text"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_locate"
                    android:layout_weight="0.5"
                    android:background="@color/ff_black"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/locate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Locate"
                        android:id="@+id/locate_text"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <Button
            android:id="@+id/declined"
            android:layout_below="@+id/accepted_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_view_accepted"
            android:text="Cancel" />

            <TextView
            android:id="@+id/accepted_deliver_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accepted_layout"
            android:text="Delivered"
            android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>