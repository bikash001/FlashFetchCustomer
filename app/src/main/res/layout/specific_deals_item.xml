<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:id="@+id/specific_deals_layout"
        android:orientation="horizontal"
        android:minHeight="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/specific_deals_product_image_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/specific_deals_product_text"
                android:padding="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yonex Muscle Power 3 Badminton racket - Grip Size - G4"/>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/specific_deals_product_original_price"
                    android:text="₹ 2300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"/>

                <TextView
                    android:id="@+id/specific_deals_product_new_price"
                    android:text="₹ 2000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/specific_deals_product_more_details"
                    android:text="More Details"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textColor="@color/icons"
                    android:background="@color/ff_black"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/specific_deals_product_but_now"
                    android:text="Buy Now"
                    android:layout_width="0dp"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/icons"
                    android:background="@color/ff_green"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>